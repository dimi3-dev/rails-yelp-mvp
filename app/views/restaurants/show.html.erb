<div class="container mt-4">
  <h2><%= @restaurant.name %></h2>
  <p><strong>Address:</strong> <%= @restaurant.address %></p>
  <p><strong>Phone:</strong> <%= @restaurant.phone_number %></p>
  <p><strong>Category:</strong> <%= @restaurant.category.capitalize %></p>

  <hr>

  <h5>Reviews</h5>
  <% if @restaurant.reviews.any? %>
    <ul class="list-group">
      <% @restaurant.reviews.each do |review| %>
        <li class="list-group-item"><%= review.content %> (Rating: <%= review.rating %>)</li>
      <% end %>
    </ul>
  <% else %>
    <p>No reviews yet.</p>
  <% end %>

  <hr>

  <%= link_to "Add a review", new_restaurant_review_path(@restaurant), class: "btn btn-info" %>
  <br>
  <%= link_to "Back to list", restaurants_path, class: "btn btn-secondary mt-2" %>
</div>
